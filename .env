# Application
APP_NAME="Experiment Management API"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development
HOST=localhost
PORT=8000
APP_ENV=development
API_VERSION=v1
API_PREFIX=/api

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=experiments_db
EXPERIMENTS_DB=experiments_db
USERS_DB=users_db

# Database URLs (for local development)
DATABASE_URL=postgresql+asyncpg://postgres:postgres123@localhost:5432/experiments_db
USERS_DATABASE_URL=postgresql+asyncpg://postgres:postgres123@localhost:5433/users_db

# Database URLs (for Docker)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres123@experiments_db:5432/experiments_db
# USERS_DATABASE_URL=postgresql+asyncpg://postgres:postgres123@users_db:5432/users_db

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0
# REDIS_URL=redis://redis:6379/0  (for Docker)
REDIS_DEFAULT_TIMEOUT=3600

# Security
SECRET_KEY=your-super-secret-key-change-in-production-12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SESSION_MAX_AGE=86400

# Default Admin User (created on startup if not exists)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Akrawer1

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8080", "http://localhost:3001"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]
CORS_HEADERS=["*"]

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/png", "image/webp"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Default Admin User (created on startup if not exists)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Akrawer1

